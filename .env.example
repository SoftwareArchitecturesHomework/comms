# Phoenix Server Configuration
PORT=4000
PHX_SERVER=true
# Production Only
SECRET_KEY_BASE=
PHX_HOST=example.com
DNS_CLUSTER_QUERY=

# Public key for asymmetric JWT verification (PEM format)
# For RS256
JWT_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\n...\n-----END PUBLIC KEY-----"

# Email Configuration (SMTP)
# For Gmail, use smtp.gmail.com with an App Password
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_SSL=false
SMTP_TLS_VERIFY=false # disable TLS cert verification for testing

# Core Service communication
CORE_SERVICE_HTTP=http://localhost:3000
CORE_SERVICE_GRPC=localhost:50051
